{
  "name": "suspense-async-store",
  "version": "0.1.0",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./fetch-helpers": {
      "types": "./dist/fetch-helpers.d.ts",
      "import": "./dist/fetch-helpers.mjs",
      "require": "./dist/fetch-helpers.cjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/fetch-helpers.ts --format cjs,esm --dts",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --coverage"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "react",
    "suspense",
    "async",
    "store"
  ],
  "author": "Youry Stancato",
  "license": "ISC",
  "description": "A suspense-style async store for React 18 and beyond"
}
